@model dynamic

@{
    ViewBag.Title = "New rental form";
}

<h2>New rental form</h2>
<form id="newRental">
    <div class="form-group">
        <label for="customer">Customer</label>
        <div class="tt-container">
            <input id="customer" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label for="movie">Movie</label>
        <div class="tt-container">
            <input id="movie" type="text" class="form-control">
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-sm-4">
            <ul id="movies" class="list-group"></ul>
        </div>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>

@section scripts
{
    <script>
    $(document).ready(function() {
        let viewModel = {
            movieIds: []
        };
        
        const customers = new Bloodhound({
            datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
            queryTokenizer: Bloodhound.tokenizers.whitespace,
            remote: {
                url: '/api/customers?query=%QUERY',
                wildcard: '%QUERY'
            }
        });
          
        $('#customer').typeahead({
            minLength: 3,
            highlight: true
        }, {
            name: 'customers',
            display: 'name',
            source: customers
        }).on('typeahead:select', function (e, customer){
            viewModel.customerId = customer.id;
        });
          
          
        const movies = new Bloodhound({
            datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
            queryTokenizer: Bloodhound.tokenizers.whitespace,
            remote: {
                url: '/api/movies?isAvailable=true&search=%NAME',
                wildcard: '%NAME'
            }
        });
        
        const movieDom = $('#movie');
        
        movieDom.typeahead({
            minLength: 3,
            highlight: true
        }, {
            name: 'movies',
            display: 'name',
            source: movies
        }).on('typeahead:select', function (e, movie){
            $('#movies').append(`<li class="list-group-item">${movie.name}</li>`);
            movieDom.typeahead('val', '');
            viewModel.movieIds.push(movie.id);
        });
        
        $('#newRental').submit(function(e) {
          e.preventDefault();
          $.ajax({
            url: '/api/rentals',
            method: 'POST',
            data: viewModel
          }).done(function (){
            toastr.success('Rental successfully recorded.');
          }).fail(function() {
            toastr.error('Something unexpected happened.');
          });
        });
    });
    </script>
}